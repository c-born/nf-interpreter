cmake_minimum_required(VERSION 2.8.2)

project(littlevgl-download NONE)

include(ExternalProject)

# download littlevgl source from official SVN repo
ExternalProject_Add( 
    littlevgl
    PREFIX littlevgl
    SOURCE_DIR ${CMAKE_BINARY_DIR}/littlevgl_Source
    GIT_REPOSITORY  https://github.com/littlevgl/lvgl.git
    GIT_TAG ${littlevgl_GIT_TAG}  # target specified branch
    GIT_SHALLOW 1   # download only the tip of the branch, not the complete history
    TIMEOUT 10
    LOG_DOWNLOAD 1
    # Disable all other steps
    INSTALL_COMMAND ""
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
)
